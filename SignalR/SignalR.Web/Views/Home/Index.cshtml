@{
    ViewData["Title"] = "Home Page";
}

@section Scripts{
<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"> </script>
<script type="text/javascript">

    $(document).ready(() => {

    var connection = new signalR.HubConnectionBuilder().configureLogging(signalR.LogLevel.Information).withUrl("https://localhost:44341/MyHub").build();
    
    $("#conStatus").text(connection.state);
    

    connection.start().then(() => {
     $("#conStatus").text(connection.state);
    }).catch((err) => { console.log(err) });
    $("#conStatus").text(connection.state);

    $("#btnNameSave").click(() => {
        connection.invoke("SendName", $("#txtName").val()).catch((err) => console.log(err))
    });

    connection.on("ReceiveName", (name) => {
        $("#nameList").append(`<li class="list-group-item"> ${name} </li>`)
    });
    });
</script>
}
<div class="row">
    <div class="col-md-8 offest-2">
        <input class="form-control" type="text" id="txtName" />
        <hr />
        <button class="btn btn-primary" id="btnNameSave">İsim Kaydet</button>
        <div class="alert alert-info">
            Bağlantı Durumu: <strong id="conStatus"></strong>
        </div>
    </div>
    <div class="col-md-8 offset-2">
        <ul class="list-group" id="nameList">

        </ul>

    </div>
</div>